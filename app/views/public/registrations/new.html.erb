<div class="container mt-5">
  <div class="row">
    <div class="col-6 offset-3 text-center">
      <h3>新規登録</h3>
      <%= render "public/shared/error_messages", resource: resource %>
      <p>
        <h7>※ゲストログインはこちら</h7><br>
        <%= link_to 'ゲストログイン（閲覧用）', guest_sign_in_path, method: :post %>
      </p>
    </div>
  </div>
  <div class="row">
      <div class="col text-center">
        <%= form_with model: @customer, url: customer_registration_path do |f| %>

          <div class="form-group mt-3 col-8 offset-2">
            <label class="col-lg-4 col-form-label">お名前</label>
              <div class="col">
                <%= f.text_field :name, autoforcus: true, autocomplete: "name" %>
              </div>
          </div>

          <div class="form-group mt-3 col-8 offset-2">
            <label class="col-lg-4 col-form-label">メールアドレス</label>
              <div class="col">
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
          </div>

          <div class="form-group mt-3 col-8 offset-2">
            <label class="col-lg-4 col-form-label">パスワード
            <% if @minimum_password_length %>
            (<%= @minimum_password_length %> 文字以上)
            <% end %></label>
              <div class="col">
                <%= f.password_field :password, autocomplete: "new-password" %>
              </div>
          </div>

          <div class="form-group mt-3 col-8 offset-2">
            <label class="col-lg-4 col-form-label">パスワード(確認用)</label>
              <div class="col">
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </div>
          </div>

          <div class="form-group mt-3 col-8 offset-2">
            <%= f.submit "登録する", class: "btn btn-success" %>
          </div>

        <% end %>
        <div class="form-group mt-4 col-8 offset-2">
          登録済みの方はこちら
        </div>
        <%= render "public/shared/links" %>
      </div>
  </div>
</div>